{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Debug Function",
      "command": "node ${cwd}/bin/debugger.js ${input:Function}",
      "type": "shell",
      "args": [],
      "isBackground": true,
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": ".",
            "endsPattern": "."
          }
        }
      ]
    }
  ],
  "inputs": [
    {
      "id": "Function",
      "description": "Functions folder to the file which should be run or debug",
      "type": "promptString"
    }
  ]
}
